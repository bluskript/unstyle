{
  "$schema": "../schemas/out/stylesheet.json",
  "id": "arch-wiki-theme",
  "name": "Arch Wiki Theme",
  "description": "Custom theme for Arch Wiki",
  "author": "Blusk",
  "variables": {
    "background": ["ui:background-dark"],
    "body-background": ["ui:background"],
    "text": ["ui:text"],
    "selection": ["ui:selection"],
    "border": ["ui:border"],
    "link": ["ui:link"],
    "link-visited": ["ui:link-visited"],
    "code-background": ["ui:background-light"],
    "code-text": ["ui:text"],
    "code-border": ["ui:border"],
    "button-background": ["ui:button-background"],
    "button-background-hover": ["ui:button-background-hover"],
    "button-text": ["ui:button-text"],
    "button-border": ["ui:border"],
    "input-background": ["ui:background-light"],
    "input-text": ["ui:text"],
    "input-border": ["ui:border"],
    "input-focus-border": ["ui:primary"],
    "input-focus-shadow": ["ui:primary"],
    "overlay-background-gradient-start": ["ui:primary"],
    "overlay-background-gradient-end": ["ui:secondary"],
    "menu-background": ["ui:background-light"],
    "menu-hover-background": ["ui:background"],
    "menu-text": ["ui:text"],
    "menu-selected-background": ["ui:selection"],
    "menu-selected-text": ["ui:text"],
    "header-background": ["ui:background-dark"],
    "header-text": ["ui:text"],
    "header-border": ["ui:primary"],
    "logo-foreground": ["ui:text"],
    "logo-accent": ["ui:primary"],
    "footer-background": ["ui:background-dark"],
    "footer-text": ["ui:text"],
    "footer-link": ["ui:link"],
    "wikitable-background": ["ui:background-light"],
    "toc-background": ["ui:background-light"]
